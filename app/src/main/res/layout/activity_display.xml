<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".simpleLogin.DisplayActivity"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txt_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_baseline_perm_identity_24"
        android:padding="20dp"
        android:drawablePadding="10dp"

        />
    <TextView


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtEmail"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_baseline_alternate_email_24"
        android:padding="20dp"
        android:drawablePadding="10dp"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtpassword"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_baseline_lock_open_24"
        android:padding="20dp"
        android:drawablePadding="10dp"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtMobilenumber"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
        android:padding="20dp"
        android:drawablePadding="10dp"/>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtaddress"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:drawableStart="@drawable/ic_baseline_edit_location_24"
        android:drawablePadding="10dp"
        />

</androidx.appcompat.widget.LinearLayoutCompat>